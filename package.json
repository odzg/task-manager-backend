{
  "$schema": "https://json.schemastore.org/package",
  "name": "task-manager-backend",
  "version": "0.0.0",
  "private": true,
  "description": "Backend for the task manager application",
  "type": "module",
  "imports": {
    "#generated/*": "./generated/*",
    "#*": "./src/*"
  },
  "scripts": {
    "check-spelling": "cspell --no-progress --show-context .",
    "dev": "node --watch --env-file=.env.development --env-file=.env.local ./src/server.ts",
    "format": "prettier --write --cache . && prisma format",
    "format:check": "prettier --check --cache . && prisma format --check",
    "git-commit": "commit",
    "lefthook": "lefthook",
    "lint": "eslint --max-warnings=0 --flag=unstable_native_nodejs_ts_config .",
    "lint:commit-message": "commitlint --edit && cspell --no-progress --no-summary .git/COMMIT_EDITMSG",
    "lint:dependency-cruiser": "depcruise .",
    "lint:syncpack": "syncpack lint",
    "start": "node ./src/server.ts",
    "test": "node --test",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@fastify/auth": "5.0.4",
    "@fastify/autoload": "6.3.1",
    "@fastify/cors": "11.2.0",
    "@fastify/env": "5.0.3",
    "@fastify/helmet": "13.0.2",
    "@fastify/jwt": "10.0.0",
    "@fastify/swagger": "9.6.1",
    "@fastify/swagger-ui": "5.2.3",
    "@fastify/type-provider-typebox": "6.1.0",
    "@prisma/client": "6.19.1",
    "date-fns": "4.1.0",
    "fastify": "5.6.2",
    "fastify-plugin": "5.1.0",
    "typebox": "1.0.65"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@commitlint/prompt-cli": "20.2.0",
    "@commitlint/types": "20.2.0",
    "@eslint-community/eslint-plugin-eslint-comments": "4.5.0",
    "@eslint/js": "9.39.2",
    "@eslint/markdown": "7.5.1",
    "@types/node": "24.10.4",
    "cspell": "9.4.0",
    "dependency-cruiser": "17.3.4",
    "eslint": "9.39.2",
    "eslint-config-flat-gitignore": "2.1.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-de-morgan": "2.0.0",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-jsdoc": "61.5.0",
    "eslint-plugin-json-schema-validator": "5.5.0",
    "eslint-plugin-jsonc": "2.21.0",
    "eslint-plugin-math": "0.13.1",
    "eslint-plugin-module-interop": "0.3.1",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-package-json": "0.85.0",
    "eslint-plugin-perfectionist": "5.0.0",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-regexp": "2.10.0",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unicorn": "62.0.0",
    "eslint-plugin-yml": "1.19.1",
    "eslint-typegen": "2.3.0",
    "knip": "5.76.1",
    "lefthook": "2.0.12",
    "prettier": "3.7.4",
    "prisma": "6.19.1",
    "syncpack": "13.0.4",
    "type-fest": "5.3.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.0"
  },
