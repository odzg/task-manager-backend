{
  "$schema": "https://json.schemastore.org/package",
  "name": "task-manager-backend",
  "version": "0.0.0",
  "private": true,
  "description": "Backend for the task manager application",
  "type": "module",
  "imports": {
    "#generated/*": "./generated/*",
    "#*": "./src/*"
  },
  "scripts": {
    "check-spelling": "cspell --no-progress --show-context .",
    "dev": "node --watch --env-file=.env.development --env-file=.env.local ./src/server.ts",
    "format": "prettier --write --cache . && prisma format",
    "format:check": "prettier --check --cache . && prisma format --check",
    "git-commit": "commit",
    "lefthook": "lefthook",
    "lint": "eslint --max-warnings=0 --flag=unstable_native_nodejs_ts_config .",
    "lint:commit-message": "commitlint --edit && cspell --no-progress --no-summary .git/COMMIT_EDITMSG",
    "lint:dependency-cruiser": "depcruise .",
    "lint:syncpack": "syncpack lint",
    "start": "node ./src/server.ts",
    "test": "node --test",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@fastify/auth": "5.0.3",
    "@fastify/autoload": "6.3.1",
    "@fastify/cors": "11.1.0",
    "@fastify/env": "5.0.3",
    "@fastify/helmet": "13.0.2",
    "@fastify/jwt": "10.0.0",
    "@fastify/swagger": "9.5.2",
    "@fastify/swagger-ui": "5.2.3",
    "@fastify/type-provider-typebox": "6.1.0",
    "@prisma/client": "6.17.1",
    "date-fns": "4.1.0",
    "fastify": "5.6.1",
    "fastify-plugin": "5.1.0",
    "typebox": "1.0.41"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/prompt-cli": "20.1.0",
    "@commitlint/types": "20.0.0",
    "@eslint-community/eslint-plugin-eslint-comments": "4.5.0",
    "@eslint/js": "9.38.0",
    "@eslint/markdown": "7.4.1",
    "@types/node": "22.18.12",
    "cspell": "9.2.2",
    "dependency-cruiser": "17.1.0",
    "eslint": "9.38.0",
    "eslint-config-flat-gitignore": "2.1.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-de-morgan": "2.0.0",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-jsdoc": "61.1.5",
    "eslint-plugin-json-schema-validator": "5.4.1",
    "eslint-plugin-jsonc": "2.21.0",
    "eslint-plugin-math": "0.13.0",
    "eslint-plugin-module-interop": "0.3.1",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-package-json": "0.57.0",
    "eslint-plugin-perfectionist": "4.15.1",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-regexp": "2.10.0",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unicorn": "61.0.2",
    "eslint-plugin-yml": "1.19.0",
    "eslint-typegen": "2.3.0",
    "knip": "5.66.2",
    "lefthook": "2.0.0",
    "prettier": "3.6.2",
    "prisma": "6.17.1",
    "syncpack": "13.0.4",
    "type-fest": "5.1.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.2"
  },
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "engines": {
    "node": "22.21.0"
  }
}
